<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:auto="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="4dp"
        auto:cardCornerRadius="2dp"
        auto:cardElevation="4dp">

        <com.jonkim.swipelayout.SwipeLayout
            android:id="@+id/swipe"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:swipeDirection="left">

            <include
                android:id="@+id/bottomView"
                layout="@layout/bottom_view"/>

            <include
                android:id="@+id/topView"
                layout="@layout/top_view"/>

        </com.jonkim.swipelayout.SwipeLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/open"
        android:text="OPEN"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/close"
        android:text="CLOSE"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <com.jonkim.swipelayout.SwipeLayout
        android:id="@+id/secondSwipe"
        android:layout_below="@id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:swipeDirection="left"
        app:swipeDurationInMilis="300">


        <!--<View-->
        <!--android:id="@+id/thirdBottomView"-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="120dp"/>-->

        <View
            android:id="@+id/secondTopView"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <include
            android:id="@+id/secondBottomView"
            layout="@layout/top_view"/>

    </com.jonkim.swipelayout.SwipeLayout>

    <TextView
        android:id="@+id/secondOpen"
        android:text="OPEN"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/secondSwipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/secondClose"
        android:text="CLOSE"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/secondSwipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_below="@id/secondClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

</RelativeLayout>