<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dashboardSavedImage"
            android:layout_alignParentStart="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:id="@+id/dashboardTextLayout"
            android:layout_toEndOf="@id/dashboardSavedImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/dashboardSavedImage">

            <TextView
                android:id="@+id/dashboardSavedRestaurantNameText"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_marginBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burger King and Burger Queen"/>

            <TextView
                android:id="@+id/dashboardSavedRestaurantMsgText"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5 off on this crazy deal i dont even know"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>